<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Green Zones Finder 🌿</title>

  <!-- 🧱 Bootstrap + FontAwesome -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

  <style>
    body {
      background-color: #f9fafb;
    }
    .card-img-top {
      transition: opacity 0.3s ease;
    }
    .card:hover .card-img-top {
      opacity: 0.7;
    }
    .card {
      transition: transform 0.2s ease;
      border: none;
      border-radius: 1rem;
      overflow: hidden;
    }
    .card:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    }
    .badge {
      font-size: 0.9rem;
      cursor: pointer;
      text-decoration: none;
    }
    @media (max-width: 768px) {
      form.d-flex {
        flex-direction: column;
        gap: 10px;
      }
      .vr {
        display: none;
      }
    }
  </style>
</head>
<body>

  <div class="container mt-5" style="max-width: 1450px;">
    
    <!-- 🔍 Search & Filter Section -->
    <div id="filterSearchArea" class="my-4 p-4 bg-light rounded shadow-sm">
      <h3 class="text-center mb-4 fw-bold">Find the Cleanest Route 🌿</h3>

      <form method="GET" action="/greenzones" 
            class="d-flex align-items-center border border-2 rounded-pill px-3 shadow-sm bg-white gap-3 mb-4" 
            style="max-width: 900px; margin: auto;">
        
        <!-- Source -->
        <div class="d-flex flex-column">
          <label class="text-muted small mb-1">From</label>
          <input type="text" class="form-control border-0 p-0" name="source" placeholder="Enter source..." required style="min-width: 150px;" />
        </div>
        <div class="vr"></div>

        <!-- Destination -->
        <div class="d-flex flex-column">
          <label class="text-muted small mb-1">To</label>
          <input type="text" class="form-control border-0 p-0" name="destination" placeholder="Enter destination..." required style="min-width: 150px;" />
        </div>
        <div class="vr"></div>

        <!-- Mode -->
        <div class="d-flex flex-column">
          <label class="text-muted small mb-1">Mode</label>
          <select class="form-select border-0 p-0" name="mode" style="min-width: 140px;">
            <option value="">Any</option>
            <option value="road">Road</option>
            <option value="metro">Metro</option>
            <option value="walk">Walk</option>
            <option value="cycle">Cycle</option>
          </select>
        </div>

        <!-- Search Button -->
        <button type="submit" 
                class="btn rounded-circle ms-3 d-flex align-items-center justify-content-center" 
                style="background-color: green; color: white; width: 45px; height: 45px;">
          <i class="fas fa-search"></i>
        </button>
      </form>

      <!-- 🌫 AQI Filter Chips -->
      <div class="d-flex justify-content-center gap-3 mt-3 flex-wrap">
        <% const filters = [
            { label: '🌿 Green Zones', color: 'green', min: 0, max: 60 },
            { label: '🚗 Moderate', color: 'orange', min: 61, max: 120 },
            { label: '🚨 High AQI', color: 'red', min: 121, max: 999 }
        ]; %>
        <% filters.forEach(f => { %>
          <a href="/greenzones?minAQI=<%= f.min %>&maxAQI=<%= f.max %>" 
            class="badge rounded-pill text-white px-3 py-2 shadow-sm"
            style="background-color: <%= f.color %>;">
            <%= f.label %>
          </a>
        <% }) %>
      </div>
    </div>

    <!-- 🗺️ Green Zone Results -->
    <% if (!zones || zones.length === 0) { %>
      <div class="alert alert-info text-center my-5">
        No green zones or routes found. Try adjusting filters.
      </div>
    <% } else { %>
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
        <% zones.forEach(zone => { 
          const color = zone.pm10 < 60 ? 'green' : zone.pm10 < 120 ? 'orange' : 'red'; %>
          <div class="col">
            <div class="card h-100 shadow-sm position-relative" style="border-left: 6px solid <%= color %>;">
              <img src="<%= zone.url || '/images/map-placeholder.jpg' %>" 
                   alt="<%= zone.name %>" 
                   class="card-img-top" 
                   style="height: 14rem; object-fit: cover;">
              <div class="card-body d-flex flex-column">
                <h5 class="card-title fw-bold"><%= zone.name %></h5>
                <p class="card-text mb-1"><i class="fa-solid fa-location-dot text-danger"></i> <%= zone.location %></p>
                <% if (zone.source) { %>
                  <p class="card-text mb-1">From: <strong><%= zone.source %></strong></p>
                  <p class="card-text mb-1">To: <strong><%= zone.destination %></strong></p>
                  <p class="card-text mb-1">Mode: <strong><%= zone.mode %></strong></p>
                <% } %>
                <p class="mb-2 mt-2">
                  🌫 PM10: 
                  <span class="fw-bold" style="color: <%= color %>;">
                    <%= zone.pm10 ? zone.pm10.toFixed(1) : 'N/A' %> µg/m³
                  </span>
                </p>
                <p class="small text-muted"><%= zone.description %></p>
                <a href="https://maps.google.com/?q=<%= zone.lat %>,<%= zone.lon %>" target="_blank" class="btn btn-outline-success mt-auto">
                  <i class="fa-solid fa-map-marker-alt"></i> View on Map
                </a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>

    <!-- 📄 Pagination -->
    <nav aria-label="Page navigation" class="my-4">
      <ul class="pagination justify-content-center">
        <% if (currentPage > 1) { %>
          <li class="page-item">
            <a class="page-link" href="/greenzones?<%= queryStringWithoutPage %>&page=<%= currentPage - 1 %>">Previous</a>
          </li>
        <% } else { %>
          <li class="page-item disabled"><span class="page-link">Previous</span></li>
        <% } %>

        <% for (let i = 1; i <= totalPages; i++) { %>
          <li class="page-item <%= i === currentPage ? 'active' : '' %>">
            <a class="page-link" href="/greenzones?<%= queryStringWithoutPage %>&page=<%= i %>"><%= i %></a>
          </li>
        <% } %>

        <% if (currentPage < totalPages) { %>
          <li class="page-item">
            <a class="page-link" href="/greenzones?<%= queryStringWithoutPage %>&page=<%= currentPage + 1 %>">Next</a>
          </li>
        <% } else { %>
          <li class="page-item disabled"><span class="page-link">Next</span></li>
        <% } %>
      </ul>
    </nav>
  </div>

  <!-- 📦 Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
